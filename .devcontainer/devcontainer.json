{
  "name": "Drupal 11 + DDEV (Optimized)",
  "image": "mcr.microsoft.com/devcontainers/php:8.3-bookworm",
  "features": {},
  "postCreateCommand": "curl -fsSL https://ddev.com/install.sh | bash",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "Drupal Site", "onAutoForward": "openPreview" }
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-azuretools.vscode-docker", "bierner.markdown-preview-github-styles"]
    }
  }
}
